{
    "name": "hono-rwa",
    "version": "0.1.0",
    "description": "Example of Auth0 labs Hono SDK running RWA in Cloudflare Workers",
    "main": "src/index.ts",
    "scripts": {
        "build:client:es": "esbuild client/main.tsx --bundle --format=esm --outfile=public/main.js --platform=browser --target=es2022 --minify --log-level=info",
        "build:client": "tsup",
        "build:server": "tsc",
        "build": "npm run build:client && tsc",
        "dev": "wrangler dev src/index.ts",
        "format": "prettier --write ."
    },
    "author": "Amin Abbaspour",
    "license": "ISC",
    "dependencies": {
        "@auth0/auth0-hono": "^1.2.5",
        "@auth0/auth0-react": "^2.4.0",
        "@auth0/web-ui-components-react": "file:../../components/auth0-web-ui-components-react-0.1.0-alpha.5",
        "hono": "^4.10.4",
        "react": "^19.2.0",
        "react-dom": "^19.2.0"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20250909.0",
        "typescript": "^5.9.2",
        "tsup": "^8.5.0",
        "prettier": "^3.6.2",
        "wrangler": "^4.36.0",
        "esbuild": "^0.24.0",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.0"
    }
}
