# Makefile for java-spring-boot-oauth2-resource-server

# Default target
.PHONY: all
all: build

# Build the project with Maven
.PHONY: build
build:
	mvn package

# Run the project with Maven
.PHONY: run
run:
	mvn spring-boot:run

# Help target
.PHONY: help
help:
	@echo "Available targets:"
	@echo "  build  - Build the project with Maven"
	@echo "  run    - Run the project with Maven"
	@echo "  help   - Display this help message"